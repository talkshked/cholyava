// Helper function to calculate the square root of a number
function squareRoot(number) {
  return Math.sqrt(number);
}

// Helper function to check if a number is odd
function isOdd(number) {
  return number % 2 !== 0;
}

// Helper function to generate a random number within a specified range
function generateRandomNumber(min, max) {
  return Math.floor(Math.random() * (max - min + 1)) + min;
}

// Function to check if a string is a valid email address
function isValidEmail(email) {
  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  return emailRegex.test(email);
}

// Example usage
const numberToSquareRoot = 16;
console.log(`Square root of ${numberToSquareRoot} is:`, squareRoot(numberToSquareRoot));

const testNumber = 27;
console.log(`${testNumber} is odd:`, isOdd(testNumber));

const minRandomNumber = 10;
const maxRandomNumber = 50;
console.log(`Random number between ${minRandomNumber} and ${maxRandomNumber} is:`, generateRandomNumber(minRandomNumber, maxRandomNumber));

const emailAddress = "example@email.com";
console.log(`"${emailAddress}" is a valid email address:`, isValidEmail(emailAddress));
